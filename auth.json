{
	"title": "Log in or Sign up",
	"backdrop": {
		"left": "/images/auth/backdrop_left.png",
		"right": "/images/auth/backdrop_right.png"
	},
	"phoneInput": {
		"placeholder": "XXXXXXXXXX",
		"defaultCountry": "US",
		"info": {
			"image": "/images/emoji/information.png",
			"text": "We’ll send a verification code to this number."
		},
		"loadingText": "Sending code..."
	},
	"verification": {
		"title": "Verification Code",
		"statement": "By clicking I Agree, you agree to our <span class='sm-hidden'><br /></span><a href='/terms' target='_blank' rel='noopener noreferrer' class='text-underline'>Terms</a> and <a href='/privacy' target='_blank' rel='noopener noreferrer' class='text-underline'>Privacy</a>.",
		"btnText": "I AGREE",
		"loadingText": "Verifying...",
		"resend": {
			"text": "Didn’t receive your code?",
			"actionText": "Resend it."
		}
	},
	"formSignUp": {
		"title": "Sign up",
		"subtitle": "Please fill in your details",
		"formProps": [
			{
				"id": "fname",
				"label": "First Name",
				"placeholder": "Your first name",
				"type": "text",
				"required": true
			},
			{
				"id": "lname",
				"label": "Last Name",
				"placeholder": "Your last name",
				"type": "text",
				"required": true
			},
			{
				"id": "email",
				"label": "Email",
				"placeholder": "Your email",
				"type": "email",
				"required": true
			}
		]
	},
	"success": {
		"headlineImage": "/images/auth/success.png",
		"desc": "We’ve added you to the sign up queue. We’ll update you when your account is ready to go!",
		"people": "people ahead of you",
		"priorityAccess": {
			"title": "Want Priority Access?",
			"desc": "Get early access by referring your friends. The more friends that join, the sooner you’ll get access.",
			"methods": [
				{
					"image": "/images/auth/twitter.svg",
					"text": "Tweet"
				},
				{
					"image": "/images/auth/email.svg",
					"text": "Email"
				},
				{
					"image": "/images/auth/linkedin.svg",
					"text": "Share"
				}
			]
		},
		"uniqueLink": {
			"title": "or share this unique link:",
			"formProps": {
				"id": "link",
				"type": "text",
				"placeholder": "<link>",
				"label": "Link"
			},
			"button": {
				"text": "Copy",
				"icon": "/images/auth/copy.svg"
			}
		}
	}
}